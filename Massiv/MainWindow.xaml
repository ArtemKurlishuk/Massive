<Window x:Class="Massiv.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Massiv"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="vvod1" Margin="10,20,10,0" VerticalAlignment="Top" Background="Aqua" Height="30"></TextBox>
        <TextBox x:Name="vvod2" Margin="10,60,10,0" VerticalAlignment="Top" Background="Aqua" Height="30"></TextBox>
        <Label Content="" x:Name="vivod" VerticalAlignment="Center" Background="BurlyWood" Height="200" Margin="10,0,10,0"/>
        <Button x:Name="itog" Content="Click" VerticalAlignment="Bottom" Click="itog_Click" Margin="550,0,5,20" Width="200"/>
    </Grid>
</Window>
